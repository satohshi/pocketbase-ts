		"test": "vitest run --typecheck",
		"release": "changeset publish"
	},
	"type": "module",
	"peerDependencies": {
		"pocketbase": ">=0.22.0 <0.26.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.11",
		"prettier": "^3.4.2",
		"typescript": "^5.7.3",
		"vitest": "^2.1.8"
	}
}
