{
	"name": "pocketbase-ts",
	"version": "1.1.0",
	"description": "Pocketbase SDK wrapper with more readable option syntax and better typings",
	"author": "satohshi",
	"keywords": [
		"pocketbase",
		"typescript",
		"option",
		"types",
		"schema"
	],
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
