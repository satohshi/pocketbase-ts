{
	"name": "pocketbase-ts",
	"version": "1.3.0",
	"description": "Pocketbase SDK wrapper with more readable option syntax and better typings",
	"author": "satohshi",
	"keywords": [
		"pocketbase",
		"typescript",
		"option",
		"types",
		"schema"
	],
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vitest --typecheck",
		"build": "tsc",
		"lint": "tsc --noEmit && prettier --check .",
