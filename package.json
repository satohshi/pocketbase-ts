{
	"name": "pocketbase-ts",
	"version": "1.4.0",
	"description": "Pocketbase SDK wrapper with more readable option syntax and better typings",
	"author": "satohshi",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/satohshi/pocketbase-ts.git"
	},
	"keywords": [
		"pocketbase",
		"typescript",
		"option",
		"types",
		"schema"
	],
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vitest --typecheck",
		"build": "tsc",
		"lint": "tsc --noEmit && prettier --check .",
		"format": "prettier --write .",
		"test": "vitest run --typecheck",
		"release": "changeset publish"
	},
	"type": "module",
	"peerDependencies": {
		"pocketbase": ">=0.22.0 <0.27.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.2",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"vitest": "^3.1.2"
	}
}
